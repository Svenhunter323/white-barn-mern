# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/whitebarnfl

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# SMTP Configuration (using original SMTP settings)
SMTP_HOST=smtpout.asia.secureserver.net
SMTP_PORT=465
SMTP_EMAIL=info@thewhitebarnfl.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_NAME='The White Barn FL'
SMTP_FROM_EMAIL=info@thewhitebarnfl.com

# Admin Defaults
DEFAULT_ADMIN_EMAIL=info@thewhitebarnfl.com
DEFAULT_ADMIN_PASSWORD=admin123

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_UPLOAD=10000000  # 10MB
FILE_UPLOAD_PATH=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window
